{
  "name": "fullstackchallenge",
  "version": "1.0.0",
  "description": "Este teste visa avaliar os conhecimentos e habilidades na nossa stack de tecnologias necessários para aplicação a oportunidade de desenvolvedor full stack aqui na [Sofit](https://sofit4.com.br).",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "test:setup": "yarn migration:revert:all && yarn migration:run:test",
    "test": "yarn test:setup && cross-env NODE_ENV=test jest --passWithNoTests --noStackTrace --runInBand --detectOpenHandles",
    "migration:revert:all": "cross-env NODE_ENV=test yarn ts-node-dev revert-all-migrations.ts",
    "migration:run:test": "cross-env NODE_ENV=test yarn ts-node-dev ./node_modules/typeorm/cli.js migration:run -d ./src/database/typeorm.ts",
    "migration:show": "yarn ts-node-dev ./node_modules/typeorm/cli.js migration:show -d ./src/database/typeorm.ts",
    "migration:run": "yarn ts-node-dev ./node_modules/typeorm/cli.js migration:run -d ./src/database/typeorm.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SofitSoftware/fullstackchallenge.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SofitSoftware/fullstackchallenge/issues"
  },
  "homepage": "https://github.com/SofitSoftware/fullstackchallenge#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "path": "^0.12.7",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}